.container(style="padding-top: 10%;")
  h1 Add Flight
  form#login-form(method="POST", action="/login")
    .form-group
      // airline_code
      label.col-sm-1-12.col-form-label(for="inputName")
      .col-sm-1-12
        input.form-control#username(type="text", name="airline_code", placeholder="Airline Code")
    .form-group
      // Flight Number
      label.col-sm-1-12.col-form-label(for="inputName")
      .col-sm-1-12
        input.form-control#password(type="text", name="flight_number", placeholder="Flight Number")
    .form-group
      // Date
      label.col-sm-1-12.col-form-label(for="inputName")
      .col-sm-1-12
        input.form-control#username(type="date", name="date", placeholder="Date")
    .form-group
      // origin
      label.col-sm-1-12.col-form-label(for="inputName")
      .col-sm-1-12
        input.form-control#password(type="Text", name="origin", placeholder="Origin")
    .form-group
      // destination
      label.col-sm-1-12.col-form-label(for="inputName")
      .col-sm-1-12
        input.form-control#password(type="Text", name="destination", placeholder="Destination")
    .form-group
      // Price
      label.col-sm-1-12.col-form-label(for="inputName")
      .col-sm-1-12
        input.form-control#password(type="Text", name="price", placeholder="ticket Cost")
    .form-group
      // Departure Time
      label.col-sm-1-12.col-form-label(for="inputName")
      .col-sm-1-12
        input.form-control#password(type="Time", name="time", placeholder="Time")
      .form-group
      // days
      label.col-sm-1-12.col-form-label(for="inputName")
      .col-sm-1-12
        input.form-control#password(type="Text", name="days", placeholder="Days")
      .form-group
    .form-group
      // buttons
      .col-sm-10
       button.btn.btn-success#addFlight(type="submit") Add Flight
  a(href="/flights") return to flights page
